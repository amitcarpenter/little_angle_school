<!-- Contact Dynamic -->
<script>
    // Fetch the contact details from the API
    fetch('https://api.littleangelspachore.com/api/getContactDetails')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const contactData = data.data;
                // Update the contact details
                document.getElementById('address').textContent = contactData.address || 'Not Available';
                document.getElementById('phone').textContent = contactData.mobile_number || 'Not Available';
                document.getElementById('email').textContent = contactData.email || 'Not Available';
                document.getElementById('email').href = `mailto:${contactData.email}`;
                // Add social media links dynamically
                const socialLinks = [
                    { platform: 'twitter', url: 'https://twitter.com/' },
                    { platform: 'facebook', url: 'https://facebook.com/' },
                    { platform: 'youtube', url: 'https://youtube.com/' },
                    { platform: 'linkedin', url: 'https://linkedin.com/' }
                ];
                const socialLinksContainer = document.getElementById('social-links');
                socialLinks.forEach(link => {
                    const anchor = document.createElement('a');
                    anchor.classList.add('btn', 'btn-outline-light', 'btn-social');
                    anchor.href = link.url;
                    anchor.innerHTML = `<i class="fab fa-${link.platform}"></i>`;
                    socialLinksContainer.appendChild(anchor);
                });
            } else {
                console.error('Failed to load contact details');
            }
        })
        .catch(error => console.error('Error fetching data:', error));
</script>


