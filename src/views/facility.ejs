<%- include('header.ejs') %>

  <style>
    .bg-primary {
      background-color: #007bff;
    }

    .bg-success {
      background-color: #28a745;
    }

    .bg-warning {
      background-color: #ffc107;
    }

    .bg-info {
      background-color: #17a2b8;
    }
  </style>
  <!-- Page Header End -->
  <div class="container-xxl py-5 page-header position-relative mb-5">
    <div class="container py-5">
      <h1 class="display-2 text-white animated slideInDown mb-4">
        Facilities
      </h1>
      <nav aria-label="breadcrumb animated slideInDown">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="#">Pages</a></li>
          <li class="breadcrumb-item text-white active" aria-current="page">
            Facilities
          </li>
        </ol>
      </nav>
    </div>
  </div>
  <!-- Page Header End -->

  <!-- Facilities Start -->
  <div class="container-xxl py-5">
    <div class="container">
      <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
        <h1 class="mb-3">School Facilities</h1>
        <p>Comprehensive School Facilities for an Enriched Learning Experience</p>
      </div>
      <div class="row g-4" id="facilities-container">
        <!-- Facilities will be inserted here -->
      </div>
    </div>
  </div>
  <!-- Facilities End -->


  <!-- Include jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


  <!-- Facilities  -->
 
<script>
  $(document).ready(function() {
      $.ajax({
          url: 'http://localhost:4002/api/facilities/all',
          method: 'GET',
          success: function(response) {
              const facilitiesContainer = $('#facilities-container');
              facilitiesContainer.empty(); // Clear existing content

              // Define an array of colors
              const colors = ['primary', 'success', 'warning', 'info'];
              
              response.data.forEach((facility, index) => {
                  // Select a color based on the index or some logic
                  const colorClass = `bg-${colors[index % colors.length]}`;
                  const textColorClass = `text-${colors[index % colors.length]}`;

                  const facilityHtml = `
                      <div class="col-lg-4 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                          <div class="facility-item">
                              <div class="facility-icon ${colorClass}">
                                  <span class="${colorClass}"></span>
                                  <img src="${facility.image}" alt="${facility.title}" class="img-fluid">
                                  <span class="${colorClass}"></span>
                              </div>
                              <div class="facility-text ${colorClass}">
                                  <h3 class="${textColorClass} mb-3">${facility.title}</h3>
                                  <p class="mb-0">${facility.description}</p>
                              </div>
                          </div>
                      </div>
                  `;
                  facilitiesContainer.append(facilityHtml);
              });
          },
          error: function(error) {
              console.error('Error fetching facilities:', error);
          }
      });
  });
</script>


