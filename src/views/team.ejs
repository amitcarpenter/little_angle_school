<%- include('header.ejs') %>
  <!-- Page Header End -->
  <div class="container-xxl py-5 page-header position-relative mb-5">
    <div class="container py-5">
      <h1 class="display-2 text-white animated slideInDown mb-4">
        Teachers
      </h1>
      <nav aria-label="breadcrumb animated slideInDown">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="#">Pages</a></li>
          <li class="breadcrumb-item text-white active" aria-current="page">
            Teachers
          </li>
        </ol>
      </nav>
    </div>
  </div>



    <!-- Popular Teachers Start -->
    <div class="container-xxl py-5">
      <div class="container">
          <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
              <h1 class="mb-3">Popular Teachers</h1>
              <p>Popular Teachers: Educators who are highly regarded by students and parents alike, known for their engaging teaching methods, supportive nature, and ability to inspire and connect with students, making learning enjoyable and impactful.</p>
          </div>
          <div class="row g-4" id="teachers-container">
              <!-- Teachers will be inserted here dynamically -->
          </div>
      </div>
  </div>
  <!-- Popular Teachers End -->

   



  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Popular Teacher -->
  <script>
    $(document).ready(function () {
      $.ajax({
        url: 'http://localhost:4002/api/teachers/all',
        method: 'GET',
        success: function (response) {
          const teachersContainer = $('#teachers-container');
          teachersContainer.empty();
          response.data.forEach((teacher, index) => {
            const teacherHtml = `
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="${0.1 + (index * 0.2)}s">
                        <div class="team-item position-relative">
                            <img class="img-fluid rounded-circle w-75" src="${teacher.teacher_profile_image}" alt="${teacher.teacher_name}">
                            <div class="team-text">
                                <h3>${teacher.teacher_name}</h3>
                                <p>${teacher.teacher_designation}</p>
                                <div class="d-flex align-items-center">
                                    <a class="btn btn-square btn-primary mx-1" href="${teacher.facebook}"><i class="fab fa-facebook-f"></i></a>
                                    <a class="btn btn-square btn-primary mx-1" href="${teacher.twitter}"><i class="fab fa-twitter"></i></a>
                                    <a class="btn btn-square btn-primary mx-1" href="${teacher.instagram}"><i class="fab fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            teachersContainer.append(teacherHtml);
          });
        },
        error: function (error) {
          console.error('Error fetching teachers:', error);
        }
      });
    });
  </script>

  <%- include('footer.ejs') %>