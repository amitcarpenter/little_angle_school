  <!-- Include jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- Contact Dynamic -->
  <script>
    $(document).ready(function () {
      $.ajax({
        url: 'https://api.littleangelspachore.com/api/getContactDetails',
        method: 'GET',
        success: function (response) {
          if (response.success) {
            const contactDetails = response.data;
            $('.fa-map-marker-alt').parent().next('h6').text(contactDetails.address);
            $('.fa-phone-alt').parent().next('h6').text(contactDetails.mobile_number);
            $('.fa-envelope-open').parent().next('h6').html(`<a href="mailto:${contactDetails.email}">${contactDetails.email}</a>`);
          } else {
            console.error('Failed to load contact details:', response.message);
          }
        },
        error: function (error) {
          console.error('Error fetching contact details:', error);
        }
      });
    });

  </script>

